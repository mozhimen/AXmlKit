<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp">

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnk_spinner_form_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:contentDescription="isRequire"
            android:src="@drawable/layoutk_form_required"
            tools:ignore="HardcodedText" />
    </FrameLayout>

    <TextView
        android:id="@+id/btnk_spinner_form_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="6dp"
        android:text="这里是标题"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:id="@+id/btnK_spinner_form_spinner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="6dp"
        android:paddingHorizontal="12dp">

        <Spinner
            android:id="@+id/btnk_spinner_form_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:minHeight="48dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:theme="@style/LayoutKSpinnerForm_Style" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="13.5dp"
            android:contentDescription="箭头"
            android:src="@drawable/layoutk_form_spinner_arrow"
            tools:ignore="HardcodedText" />
    </FrameLayout>

</LinearLayout>