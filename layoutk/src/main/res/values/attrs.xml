<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--layoutk-->
    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--layoutk_loading-->
    <declare-styleable name="LayoutKLoading">
        <attr name="layoutKLoading_loadColor" format="color|reference" />
        <attr name="layoutKLoading_loadSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="LayoutKAmount">
        <attr name="layoutKAmount_minVal" format="integer" />
        <attr name="layoutKAmount_maxVal" format="integer" />
        <attr name="layoutKAmount_defaultAmount" format="integer" />

        <attr name="layoutKAmount_amountTextColor" format="color|reference" />
        <attr name="layoutKAmount_amountTextSize" format="dimension|reference" />
        <attr name="layoutKAmount_amountBackgroundColor" format="color|reference" />
        <attr name="layoutKAmount_amountMarginHorizontal" format="dimension|reference" />
        <attr name="layoutKAmount_amountMinWidth" format="dimension|reference" />

        <attr name="layoutKAmount_btnTextColor" format="color|reference" />
        <attr name="layoutKAmount_btnTextSize" format="dimension|reference" />
        <attr name="layoutKAmount_btnBackgroundColor" format="color|reference" />
        <attr name="layoutKAmount_btnSize" format="dimension|reference" />
    </declare-styleable>

    <!--视频布局-->
    <declare-styleable name="LayoutKVideo">
        <!--视频地址-->
        <attr name="layoutKVideo_pathOrUrl" format="string|reference" />
        <!--视频是否循环播放-->
        <attr name="layoutKVideo_isLoop" format="boolean" />
        <!--视频位置权重-->
        <attr name="layoutKVideo_videoGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="centerCrop" value="2" />
            <enum name="none" value="3" />
        </attr>
        <!--音量0-10-->
        <attr name="layoutKVideo_volume" format="integer" />
    </declare-styleable>

    <declare-styleable name="LayoutKSquare">
        <attr name="layoutKSquare_measureMode" format="enum">
            <enum name="measureMin" value="0" />
            <enum name="measureMax" value="1" />
            <enum name="measureWidth" value="2" />
            <enum name="measureHeight" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LayoutKTimeLine">
        <!--时间轴偏移值-->
        <attr name="layoutKTimeLine_lineMarginOffset" format="dimension|reference" />
        <!--时间轴动态调整值-->
        <attr name="layoutKTimeLine_lineDynamicOffset" format="dimension|reference" />
        <!--线宽-->
        <attr name="layoutKTimeLine_lineWidth" format="dimension|reference" />
        <!--线的颜色-->
        <attr name="layoutKTimeLine_lineColor" format="color|reference" />
        <!--时间轴的gravity-->
        <attr name="layoutKTimeLine_lineGravity">
            <enum name="center" value="0" />
            <enum name="left" value="2" />
            <enum name="top" value="1" />
            <enum name="right" value="4" />
            <enum name="bottom" value="3" />
        </attr>
        <!--点的大小-->
        <attr name="layoutKTimeLine_pointSize" format="dimension|reference" />
        <!--点的颜色-->
        <attr name="layoutKTimeLine_pointColor" format="color|reference" />
        <!--图标-->
        <attr name="layoutKTimeLine_pointIconSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="LayoutKUnTouchConstraint">
        <attr name="layoutKUnTouchConstraint_mode">
            <enum name="all" value="0" />
            <enum name="child_can_touch" value="1" />
        </attr>
    </declare-styleable>
</resources>