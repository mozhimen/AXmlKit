<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AXmlKit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="XmlKStyle_Btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="XmlKStyle_Txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DialogKQues_Anim_Custom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/animk_trans_top_show</item>
        <item name="android:windowExitAnimation">@anim/animk_trans_top_hide</item>
    </style>

    <style name="LeleTxt_style.Content" parent="StyleK_Txt.Font_Sans_Serif.Gravity_Center.Style_Norm.Color_Gray_999.Size_013.Width_Wrap.Height_Wrap">
        <item name="android:gravity">start</item>
    </style>

    <style name="DialogK_Style_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">14dp</item>
        <item name="android:textColor">@color/cok_blue_0876e4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogK_Style_BtnCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <!--        <item name="android:backgroundTint">@color/cok_blue_e8f3ff</item>-->
        <item name="android:textColor">@color/cok_blue_0876e4</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="DialogK_Style_BtnSure" parent="DialogK_Style_BtnCancel">
        <!--        <item name="android:backgroundTint">@color/cok_blue_287ff1</item>-->
        <item name="android:textColor">@color/cok_blue_e8f3ff</item>
    </style>
</resources>