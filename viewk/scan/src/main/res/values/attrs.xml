<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewKScanOverlay">
        <attr name="viewKScanOverlay_isShowLabel" format="boolean" />
        <attr name="viewKScanOverlay_labelTextSize" format="dimension|reference" />
        <attr name="viewKScanOverlay_labelTextColor" format="color|reference" />
        <attr name="viewKScanOverlay_labelBackgroundColor" format="color|reference" />
        <attr name="viewKScanOverlay_boxType" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="viewKScanOverlay_boxLineWidth" format="dimension|reference" />
        <attr name="viewKScanOverlay_boxLineColor" format="color|reference" />
    </declare-styleable>
    <!--二维码扫描控件-->
    <declare-styleable name="ViewKScanQR">
        <!-- 扫描边框线的宽度，默认值为1dp -->
        <attr name="viewKScanQR_borderLineWidth" format="dimension|reference" />
        <!-- 扫描边框的颜色，默认值为@android:color/white -->
        <attr name="viewKScanQR_borderColor" format="color|reference" />
        <!-- 扫描线的图片资源，默认值为null -->
        <attr name="viewKScanQR_lineDrawable" format="reference" />
        <!-- 扫描线的线宽，默认值为1dp -->
        <attr name="viewKScanQR_lineWidth" format="dimension|reference" />
        <!-- 扫描线从顶部移动到底部的动画时间，默认值为1000 -->
        <attr name="viewKScanQR_animTime" format="integer" />
        <!-- 扫描线是否来回移动，默认值为true -->
        <attr name="viewKScanQR_isScanLineReverse" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ViewKScanQR2">
        <!-- 扫描边框的粗细-->
        <attr name="viewKScanQR2_borderWidth" format="dimension|reference" />
        <!-- 扫描边框的颜色-->
        <attr name="viewKScanQR2_borderColor" format="color|reference" />
        <!-- 扫描线的图片资源-->
        <attr name="viewKScanQR2_lineDrawable" format="reference" />
        <!-- 扫描线的粗细-->
        <attr name="viewKScanQR2_lineWidth" format="dimension|reference" />
        <!-- 扫描线的颜色-->
        <attr name="viewKScanQR2_lineColor" format="color|reference" />
        <!-- 扫描线每次移动的距离(包括扫描线的移动,收缩和成功logo的展现)-->
        <attr name="viewKScanQR2_distance" format="dimension|reference" />
        <!-- 扫描线从顶部移动至底部的动画时间ms-->
        <attr name="viewKScanQR2_animTime" format="integer" />
        <!-- 扫描线是否来回移动-->
        <attr name="viewKScanQR2_isLineReverse" format="boolean" />
        <!-- 扫描成功的成功图标-->
        <attr name="viewKScanQR2_successDrawable" format="reference" />
        <!-- 扫描成功的成功图标大小-->
        <attr name="viewKScanQR2_successDrawableSize" format="dimension|reference" />
        <!-- 扫描成功的成功动画时间-->
        <attr name="viewKScanQR2_successAnimTime" format="integer" />
    </declare-styleable>
</resources>